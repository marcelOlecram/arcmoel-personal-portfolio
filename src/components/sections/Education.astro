---
import {education} from "../../cv.json";
import Section from "@/components/Section.astro";
---

<Section title="Education">
    <ul>
        {education.map(
            ({institution, area, studyType, startDate, endDate}) => 
            {
                const startYear = new Date(startDate).getFullYear();
                const endYear = endDate != null? new Date(endDate).getFullYear() : "Present";
                const years = `${startYear} - ${endYear}`
                return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{institution}</h3>
                                <p>{area}</p>
                            </div>
                            <time>{years}</time>
                        </header>
                        <footer>
                            <p>{studyType}</p>
                        </footer>
                    </article>                    
                </li>)
            }
        )
        
        }
    </ul>
</Section>

<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 20px 32px;
    }

    article h3 {
        font-weight: 500;
        font-size: 1.5rem;
        color: #111;
    }

    article h3 {
        font-weight: 400;
        color: #111;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 4px;
    }

    time {
        font-size: 0.85rem;
        color: #555;
    }
</style>